{
    "compilerOptions":
    {
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,

        "baseUrl": "./",
        "rootDir": "src",
        "paths": { "src/*": ["./src/*"] },

        "outDir": "dist",
        "declaration": true
    },

    "include": ["src/**/*"],

    "ts-node": { "require": ["tsconfig-paths/register"] },
    "tsc-alias": { "replacers": { "base-url": { "enabled": false } } }
}